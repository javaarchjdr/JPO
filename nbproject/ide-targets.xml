<?xml version="1.0" encoding="UTF-8"?>
<project basedir=".." name="Java Picture Organizer-IDE">
    <import file="../build.xml"/>

    <!-- (more info: http://www.netbeans.org/kb/41/freeform-config.html#debugj2se) -->
    <target depends="compile" description="Runs the program" name="debug-nb">
        <echo>build-classpath: ${ant.refid:build-classpath}</echo>
        <nbjpdastart addressproperty="jpda.address" name="Java Picture Organizer" transport="dt_socket">
            <classpath refid="build-classpath"/>
        </nbjpdastart>
        <java classname="${app.main.class}" fork="yes"  >
             <classpath refid="classpath"/>
            <jvmarg value="-Xdebug"/>
            <jvmarg value="-Xnoagent"/>
            <jvmarg value="-Djava.compiler=none"/>
            <jvmarg value="-Xrunjdwp:transport=dt_socket,address=${jpda.address}"/>
        </java>
    </target>
    
    <target name="-profile-check">
        <startprofiler freeform="true"/>
    </target>
    
    <!-- TODO: edit the following target according to your needs -->
    <!-- (more info: http://netbeans.org/kb/articles/freeform-config.html#profilej2se) -->
    <target depends="-profile-check" description="Runs the program" if="profiler.configured" name="profile-nb">
        <java classname="${app.main.class}" fork="yes" >
            <classpath refid="classpath"/>
            <!-- add for debugging: jvmargs="-Xdebug -Xrunjdwp:transport=dt_socket,server=y,address=8888,suspend=n" -->
            <jvmarg line="${agent.jvmargs}"/>
        </java>
    </target>
</project>
